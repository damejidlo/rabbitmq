{
	"name": "damejidlo/rabbitmq",
	"type": "library",
	"description": "Integrates php-amqplib with RabbitMq and Nette Framework",
	"keywords": ["nette", "rabbitmq", "rabbit", "amqp", "messaging", "message", "queue"],
	"license": "MIT",
	"authors": [
		{
			"name": "Alvaro Videla"
		},
		{
			"name": "Filip Procházka",
			"homepage": "http://filip-prochazka.com",
			"email": "filip@prochazka.su"
		},
		{
			"name": "Dáme jídlo developers",
			"homepage": "https://www.damejidlo.cz",
			"email": "webmaster@damejidlo.cz"
		}
	],
	"require": {
		"php": ">=5.4",
		"nette/di": "^2.4",
		"nette/utils": "^2.4",
		"php-amqplib/php-amqplib": "~2.6.2"
	},
	"require-dev": {
		"nette/bootstrap": "^2.4",
		"tracy/tracy": "^2.4",
		"kdyby/console": "^2.5",

		"damejidlo/coding-standard": "^0.10.0",
		"jakub-onderka/php-parallel-lint": "^1.0",
		"mockery/mockery": "^1.2",
		"nette/tester": "^2.1",
		"phpstan/phpstan-mockery": "^0.10.2",
		"phpstan/phpstan-shim": "^0.10.5"

	},
	"support": {
		"issues": "https://github.com/damejidlo/rabbitmq/issues"
	},
	"autoload": {
		"psr-0": {
			"Damejidlo\\RabbitMq\\": "src/"
		},
		"classmap": [
			"src/Damejidlo/RabbitMq/exceptions.php"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.0-dev"
		}
	}
}
